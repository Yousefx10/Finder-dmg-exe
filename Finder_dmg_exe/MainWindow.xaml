<Window x:Class="Finder_dmg_exe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finder_dmg_exe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--Grid Definitions [START]-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
                <!--Real Columns [START]-->
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <!--Real Columns [END]-->
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
                <!--Real Rows [START]-->
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <!--Real Rows [END]-->
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>
        <!--Grid Definitions [END]-->


        <Grid Grid.Column="1" Grid.Row="1" >
            <!---->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!---->
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <!---->


            <Button Background="Transparent" BorderThickness="0" Grid.Row="0" >
                <StackPanel Orientation="Horizontal">
                    <!--<Image/>-->
                    <Rectangle Width="10" Height="10" Fill="black" Margin="2"/>
                    <TextBlock Text="Recents"/>
                </StackPanel>
            </Button>
            <Button Background="Transparent" BorderThickness="0" Grid.Row="1" Content="Shared"/>
            <Button Background="Transparent" BorderThickness="0" Grid.Row="2" Content="Applications"/>
            <Button Background="Transparent" BorderThickness="0" Grid.Row="3" Content="Desktop"/>
            <Button Background="Transparent" BorderThickness="0" Grid.Row="4" Content="Documents"/>
            <Button Background="Transparent" BorderThickness="0" Grid.Row="5" Content="Downloads"/>
            <Button Background="Transparent" BorderThickness="0" Grid.Row="6" Content="Local Disk C:"/>
            <Button Background="Transparent" BorderThickness="0" Grid.Row="7" Content="OneDrive"/>
            <Button Background="Transparent" BorderThickness="0" Grid.Row="8" Content="USER"/>
            <Button Background="Transparent" BorderThickness="0" Grid.Row="9" Content="Trash"/>
        </Grid>
        
    </Grid>
</Window>
